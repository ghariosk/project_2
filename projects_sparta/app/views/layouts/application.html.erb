  <body>
    <nav class="navbar navbar-expand navbar-dark navbar-custom fixed-top" >
      <a class="navbar-brand" href="https://www.spartaglobal.com/">
        <div class="logo"> </div>      
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon">
        </span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/home">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/public/">Public Projects</a>
          </li>
          <br>
          <br>

          <% if user_signed_in?  %>
            <li class="nav-item">

            	<%= link_to "Personal Projects", user_projects_path(current_user), :class => "nav-link active" %>
            </li>
            <% if current_user.admin == true %>
              <li class="nav-item">
                <a class="nav-link btn" href="/users">User base</a>
              </li>
            <% end %>

            <% if user_signed_in? %>
            <li class="nav-item">


            <%= link_to "Create Project", new_user_project_path(current_user), :class => "nav-link active" %>

            </li>

           <% end %>

           <% end %>


        <li class="nav-item">
        <div class='email nav-link active pull-right'> 
   
        <% if user_signed_in? %>
          Logged in as <strong> <%= current_user.email %> </strong>
          <%= link_to "Edit Profile", edit_user_registration_path, :class => "btn btn-info btn-sm" %> 
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => "btn btn-danger btn-sm" %> 
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, :class => "btn btn-primary btn-sm" %> 
          <%= link_to "Login", new_user_session_path, :class => "btn btn-primary btn-xs" %> 
        <% end %>
       
        </div>
        </li>
        </ul>
      </div>



    </nav>

    <div class='center'>
      <% if notice %>
    	  <p class="alert alert-success"> <%= notice %> </p>
    	<% end %>
      <% if alert %>
    	  <p class="alert alert-danger"> <%= alert %> </p>
    	<% end %>
      <%= yield %>
