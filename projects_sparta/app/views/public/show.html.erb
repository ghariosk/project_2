<h1> <%= @project.name %> </h1>

<%= form_tag(@projects_path, :method => "get", id: "search-form") do %>
	    <%= text_field_tag :search, params[:search], placeholder: "Search Projects" %>
	    <%= submit_tag "Search" %>
	  <% end %>
	  <% if @projects.blank? %>
	    <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
	  <% end %>
<%= render @project %>
